#include<iostream>
using namespace std;

int main()
{
         float k,c,s,r,d,m;
	 cout<<"ingrese el valor de k="; cin>>k;
	 cout<<"ingrese el valor de c="; cin>>c;
	 s=k+c;
	 r=k-c;
	 d=k×c;
	 m=k/c;
	 cout<<"el resultado de la suma es"<<k<<"+"<<c<<"="<<s<<endl;
	 cout<<"el resultado de la resta es"<<k<<"-"<<c<<"=<<r<<endl;
	 cout<<"el resultado de la multiplicacion es"<<k<<"×"<<c<<"="<<d<<endl;
	 cout<<"el resultado de la divicion es"<<k<<"/"<<c<<"="<<m<<endl;
	 return 0;
}
//gracias ;
